<div class="container">
  <h1 class="m-3">Movie Lists</h1>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="card-item co-12 col-sm-6 col-md-4 m-4" style="width: 16rem;">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=list.photo.attached? ? cl_image_path(list.photo.key, crop: :fill) : asset_path('list_background.jpg') %>')">
      <%= link_to list.name, list_path(list), class:"text-decoration-none text-white text-center"%>
      </div>
      <%= link_to 'Delete', list_path(list), method: :delete, data: {confirm: "Are you sure?"}, class:" text center text-decoration-none text-dark" %>
      </p>
    </div>
    <% end %>
  </div>
  <%= link_to "Add a new list", new_list_path, class: "btn btn-primary m-4"%>
</div>

